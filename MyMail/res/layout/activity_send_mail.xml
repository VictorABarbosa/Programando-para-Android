<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.ufc.dc.sd4mp.mymail.SendMail"
    android:orientation="vertical">


    <EditText
        android:id="@+id/email_destinatario"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/hint_destinatario"
        />

    <EditText
        android:id="@+id/assunto_email"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailSubject"
        android:hint="@string/hint_assunto"
        />

    <EditText
        android:id="@+id/corpo_email"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:text="@string/enviar_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:onClick="SendEmailImplicit"
        />

    <Button
        android:text="@string/cancelar_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:onClick="TelaAnterior"
        />
     </LinearLayout>

</LinearLayout>
